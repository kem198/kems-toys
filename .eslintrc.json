{
  "extends": [
    "airbnb",
    "airbnb-typescript",
    // "airbnb/hooks",
    "next/core-web-vitals",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    // default export の強制を無効化
    // https://github.com/import-js/eslint-plugin-import/blob/main/docs/rules/prefer-default-export.md
    "import/prefer-default-export": "off",
    // label, input 要素の使用時にネストのみでも可とする
    // https://github.com/jsx-eslint/eslint-plugin-jsx-a11y/blob/main/docs/rules/label-has-associated-control.md
    // https://zenn.dev/krntmm/articles/756fdf2f8fcdff
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "labelComponents": [],
        "labelAttributes": [],
        "controlComponents": [],
        "assert": "either",
        "depth": 25
      }
    ],
    // 名前付きエクスポートにアロー関数を強制する
    // https://github.com/jsx-eslint/eslint-plugin-react/blob/master/docs/rules/function-component-definition.md
    // "react/function-component-definition": [
    //   "warn",
    //   { "namedComponents": "arrow-function" }
    // ],
    // defaultProps の強制をオフ
    // https://github.com/jsx-eslint/eslint-plugin-react/blob/master/docs/rules/require-default-props.md
    "react/require-default-props": "off",
    // props 渡しでスプレッド構文を使用できるようにする
    // https://github.com/jsx-eslint/eslint-plugin-react/blob/master/docs/rules/jsx-props-no-spreading.md
    "react/jsx-props-no-spreading": "off"
  },
  "overrides": [
    {
      // テスト系ファイルのみ devDependencies からの import を許可する
      "files": [
        "**/*.test.{js,ts,tsx}",
        "**/*.spec.{js,ts,tsx}",
        "**/e2e/**/*.{js,ts,tsx}",
        "**/tests/**/*.{js,ts,tsx}",
        "playwright.config.{js,ts}",
        "vitest.config.{js,ts,mts}"
      ],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
